# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8-bom
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_brace_style = Allman
max_line_length = 120

# Indentation override for all JS, JSON, XML, CSPROJ, SLN, CONFIG and CSS files
[*.{js,json,xml,csproj,sln,config,css}]
indent_size = 2

# Indentation brace style override for all JS, JSON and CSS files
[*.{js,json,css}]
indent_brace_style = K&R
